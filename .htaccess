RewriteEngine On

# Set the base to the folder name kung hindi nasa root
RewriteBase /luntianJMS/

# Remove .php from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{DOCUMENT_ROOT}/luntianJMS/$1.php -f
RewriteRule ^(.+)$ $1.php [L,QSA]

# Optional: Redirect .php requests to extensionless
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]
